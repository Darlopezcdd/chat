<style>
   
    .header-dark {
        height: 10px;
        background-color: #333;
        width: 100%;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.5);
    }

    
    body.dark-mode {
        background-color: #121212;
        color: #ffffff;
    }

    
    .dark-mode-btn {
        position: fixed;
        top: 20px;
        right: 20px;
        background-color: #444;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
    }

        .dark-mode-btn:hover {
            background-color: #555;
        }

    .container-fluid {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px;
    }

    #darkModeToggle {
        margin-left: auto; 
    }
    .navbar-brand {
        font-size: 1.25rem;
        font-weight: bold;
    }

    .nav-link {
        font-size: 1.10rem;
    }

    #notification-bell {
        font-size: 1.10rem;
    }

    #new-message-count {
        font-size: 1.05rem;
        font-weight: bold;
    }

    .chat-container {
        display: flex;
        height: 90vh;
        border: 1px solid #ccc;
        border-radius: 10px;
        overflow: hidden;
        font-family: Arial, sans-serif;
    }

    .sidebar {
        width: 30%;
        background: #f8f9fa;
        padding: 15px;
        border-right: 1px solid #ccc;
        overflow-y: auto;
    }

    .chat-messages {
        flex: 1;
        display: flex;
        flex-direction: column;
        background: #ffffff;
        overflow-y: auto;
        position: relative;
    }
    .btooon
    {
        flex: 1;
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        margin-right: 10px;
    }

    .messages {
        flex: 1;
        overflow-y: auto;
        padding: 10px;
    }

    .message {
        position: relative;
        max-width: 50%;
        padding: 15px;
        border-radius: 25px;
        margin-bottom: 10px;
        word-wrap: break-word;
    }

        .message.sent {
            background-color: #4a90e2;
            color: white;
            margin-left: auto;

    
        }

        .message.received {
            background-color: #e9ecef;
            color: black;
            margin-right: auto;
        }

    .message-content {
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .message.sent .message-time {
        color: white;
    }

    .message-image {
        border-radius: 10px;
        max-width: none;
        max-height: none;
        width: auto;
        height: auto;
    }

    .message-file, .message-image {
        margin-top: 5px;
    }

    .message-content > :not(:last-child):not(.message-file):not(.message-image) {
        margin-bottom: 0;
    }

    .message-content .message-time {
        margin-top: 5px;
    }

    .message-file {
        color: #0033cc;
        text-decoration: none;
        font-size: 14px;
    }

        .message-file:hover {
            text-decoration: underline;
        }
    .message-time {
        font-size: 12px;
        color: gray;
        text-align: right;
    }

    .message-input {
        display: flex;
        padding: 11px;
        background: #f8f9fa;
        border-top: 1px solid #ccc;
    }

        .message-input button {
            flex: 1;
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin-right: 10px;
        }

            .message-input button:hover {
                padding: 10px 20px;
                border: none;
                background: #007bff;
                color: white;
                border-radius: 5px;
            }

    body.dark-mode {
        background-color: #121212;
        color: #e0e0e0;
    }

        body.dark-mode .chat-container {
            border-color: #333;
        }

        body.dark-mode .sidebar {
            background: #1e1e1e;
            color: #e0e0e0;
            border-right-color: #333;
        }

        body.dark-mode .chat-messages {
            background: #1e1e1e;
        }


        body.dark-mode .message.received {
            background-color: #333;
            color: #e0e0e0;
        }

        body.dark-mode .message-file {
            color: #7fffd4;
        }

        body.dark-mode .btooon {
        background: #4a90e2;
        color: white;
        border-color: #4a90e2;
    }

        body.dark-mode .message-input {
            background: #1e1e1e;
            border-top-color: #333;
        }

  

            body.dark-mode .message-input button {
                background: #4a90e2;
                color: white;
                border-color: #4a90e2;
            }

                body.dark-mode .message-input button:hover {
                    background: #007bff;
                }
</style>

<script>
    const messagesDiv = document.querySelector('.messages');
    messagesDiv.scrollTop = messagesDiv.scrollHeight;

    window.onload = function () {
        const darkModeEnabled = localStorage.getItem('darkMode') === 'true';
        if (darkModeEnabled) {
            document.body.classList.add('dark-mode');
        }
    };
    function toggleDarkMode() {
        const isDarkMode = document.body.classList.toggle('dark-mode');
        localStorage.setItem('darkMode', isDarkMode);
    }
    async function checkNewMessages() {
    try {
        console.log('Verificando nuevos mensajes...');
        const response = await fetch('https://localhost:7230/api/Mensajes/NuevosMensajes');
        console.log('Respuesta recibida:', response);
        
        if (!response.ok) {
            console.error('Error en la respuesta de la API:', response.statusText);
            return;
        }

        const hasNewMessages = await response.json();
        console.log('¿Nuevos mensajes?:', hasNewMessages);

        const notificationElement = document.getElementById('new-message-count');
        if (notificationElement) {
            notificationElement.textContent = hasNewMessages ? 'Si' : 'No';
        }

        if (hasNewMessages) {
            console.log('Tienes nuevos mensajes no leídos.');
        }
    } catch (error) {
        console.error('Error al verificar mensajes nuevos:', error);
    }
}

setInterval(checkNewMessages, 1000);

    function filtrarPorGrupo() {
        const grupoId = document.querySelector('[name="GrupoId"]').value;
        const destinatario = document.getElementById('destinatario');

        if (grupoId) {
            // Bloquear destinatario si hay un grupo seleccionado
            destinatario.disabled = true;
            destinatario.value = ""; // Limpiar el valor seleccionado
        } else {
            // Habilitar destinatario si no hay grupo seleccionado
            destinatario.disabled = false;
        }
    }
</script>

